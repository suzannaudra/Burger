<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center" id="top-bar">
      <h1>BURGERS</h1>
      <div class="col=xs-6 text-center" class="task">
        <div class="row">
          {{#each burger_data}}
          {{#unless this.devoured}}
          <div class="col-xs-9 text-center">
            <p>{{this.id}}. {{this.burger}}</p>
          </div>
          <div class="col-xs-3 text-center">
            <form method="POST" actions="/burgers/update?_method=PUT" class="button-size">
          <input type="hidden" name="burger" type="text"
          value={{this.id}}>
          <br>
          <button type="submit" class="btn btn-default">Eat The Burger</button>
          </form>
          </div>
          {{/unless}}
           {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>